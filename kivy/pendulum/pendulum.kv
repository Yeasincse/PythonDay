#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
<PongGame>: 
	ball: pong_ball   
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
            color: 0,1,0,1
            
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
        color: 1,0,0,1

    PongBall:
    	id: pong_ball
    	center: self.parent.center
    	color: 1,0,0,1
